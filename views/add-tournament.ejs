<script>
    a()
    function a() {
        $.getJSON('/add-tournament/alldata', (data) => {

            maketable(data)
        })
    }
    function maketable(data) {

        let table = `   <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" >
                            <thead>
                                    <tr>
                                        <th>Game Category</th>
                                        <th>Tournament</th>
                                        <th>Map</th>
                                        <th>Type</th>
                                        <th>Entry Price</th>
                                        <th>Start date</th>
                                        <th>Pool Price</th>
                                        <th>Remove</th>   
                                        
                                           
                                    </tr>
                                </thead>`
        $.each(data, function (i, item) {
            table += `    <tbody>

                                    <tr class="table__row">

                                        <td>${item.categoryname}</td>
                                        <td>${item.tournamentname}</td>
                                        <td>${item.map}</td>
                                        <td>${item.type}</td>
                                        <td>${item.entryprice}</td>
                                        <td>${item.startdate}</td>
                                        <td>${item.poolprice}</td>
                                        <td><a href="/add-tournament/removeteam?id=${item.id}"><input type="button" value="Delete" class="btn btn-danger"></a></td>
                                        
                                    </tr>
                                </tbody>`
        })
        table += `   </table>`

        $('.result').html(table)


    }
</script>

<script>
    $.getJSON("/add-tournament/categorydetail", data => {
        project = data;
        console.log(data);
        fillDropDown("categoryname", data, "Choose Game Category", 0);
    });

    function fillDropDown(id, data, label, selectedid = 0) {
        $(`#${id}`).empty();
        $(`#${id}`).append(
            $("<option>")
                .val("null")
                .text(label)
        );
        $.each(data, (i, item) => {
            if (item.id == selectedid) {
                $(`#${id}`).append(
                    $("<option selected>")
                        .val(item.categoryname)
                        .text(item.categoryname)
                );
            } else {
                $(`#${id}`).append(
                    $("<option>")
                        .val(item.categoryname)
                        .text(item.categoryname)
                );
            }
        });
    };
</script>

